alias arrange-displays-RL-with-displaylink='displayplacer "id:37D8832A-2D66-02CA-B9F7-8F30A301B230 res:1680x1050 hz:60 color_depth:8 enabled:true scaling:on origin:(0,0) degree:0" "id:5768F6DE-C603-B581-0857-D6964E3302DB res:2560x1440 hz:75 color_depth:8 enabled:true scaling:off origin:(844,-1440) degree:0" "id:5768F6DE-C603-B581-C90B-A2661D91F570 res:2560x1440 hz:75 color_depth:4 enabled:true scaling:off origin:(-1716,-1440) degree:0"'
alias arrange-displays-RL-no-displaylink='displayplacer "id:37D8832A-2D66-02CA-B9F7-8F30A301B230 res:1680x1050 hz:60 color_depth:8 scaling:on origin:(0,0) degree:0" "id:5768F6DE-C603-B581-0857-D6964E3302DB res:2560x1440 hz:75 color_depth:8 scaling:off origin:(-1652,-1440) degree:0"'

function arrange-displays-RL () {
  displayplacer list | grep "Persistent screen id: 5768F6DE-C603-B581-0857-D6964E3302DB"
  hdmiMonitor=$?
  displayplacer list | grep "Persistent screen id: 5768F6DE-C603-B581-9DE9-0966D8C1CFC8"
  displayLinkMonitor=$?

  if [[ "$hdmiMonitor" -eq 0 && "$displayLinkMonitor" -eq 0 ]]; then
    echo "Arranging RL displays for at desk, with display link"
    arrange-displays-RL-with-displaylink
  elif [[ "$hdmiMonitor" -eq 0 ]]; then
    echo "Arranging RL displays for at desk, without display link"
    arrange-displays-RL-no-displaylink
  else
    echo "Arranging RL displays away from desk"
  fi
}

alias quit-display-link='osascript -e "quit app \"DisplayLinkUserAgent\""'
alias quit-immersed='osascript -e "quit app \"Immersed\""'
alias quit-meta-workspaces='osascript -e "quit app \"Meta Quest Remote Desktop\""'
alias dim-macbook-screen='(dotfiles && osascript ./apple\ script/decrease\ brightness.scpt)'
alias brighten-macbook-screen='(dotfiles && osascript ./apple\ script/increase\ brightness.scpt)'

alias immersed='quit-display-link && sleep 2 && open /Applications/Immersed.app'
alias immersed-end='quit-immersed && brighten-macbook-screen && open /Applications/DisplayLink\ Manager.app && sleep 4 && arrange-displays-RL'
alias workspaces='quit-display-link && sleep 2 && open /Applications/Meta\ Quest\ Remote\ Desktop.app && dim-macbook-screen'
alias workspaces-end='quit-meta-workspaces && brighten-macbook-screen && open /Applications/DisplayLink\ Manager.app && sleep 4 && arrange-displays-RL'

alias airpods='SwitchAudioSource -s "George’s AirPods Pro" -t input & SwitchAudioSource -s "George’s AirPods Pro" -t output'
alias mic-and-airpods='SwitchAudioSource -s "RØDE VideoMic GO II" -t input & SwitchAudioSource -s "George’s AirPods Pro" -t output'

function merge-pdfs () {
  first_arg=$1
  shift 1 # Shifts the input arguments 1 place to the left to give all args except the first
  gs -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite -sOutputFile="$first_arg" $@
}
