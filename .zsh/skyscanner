function sa-bump-ruby-version() {
  sa
  sed -i -e "s/ruby '2.6.3'/ruby '2.6.4'/g" ./Gemfile
}
function sa-select-xcode() {
  if [[ $(xcode-select -p) != "/Applications/Xcode_12.0.1.app/Contents/Developer" ]]; then
    sudo xcode-select -switch /Applications/Xcode_12.0.1.app
  fi
}
